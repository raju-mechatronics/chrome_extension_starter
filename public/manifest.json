{
    "manifest_version": 3,
    "name": "OFFER_URL_SHORTNER",
    "version": "1.0",
    "description": "This extension will shorten the URL",
    "permissions": [
        "tabs",
        "activeTab",
        "storage"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://affiliates.nordvpn.com/publisher/*",
                "https://surfshark.hasoffers.com/publisher/*"
            ],
            "js": [
                "content.js"
            ],
            "css": ["style.css"]
        }
    ]
}